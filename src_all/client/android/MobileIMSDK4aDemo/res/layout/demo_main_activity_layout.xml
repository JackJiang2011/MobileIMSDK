<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/serverIP_editText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:textColor="#ff007aff"
                android:text="rbcore.openmob.net"
                android:hint="Domain or ip address #"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>
            
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="："
	            android:textAppearance="?android:attr/textAppearanceLarge"
	            android:textColor="#666666"
	            android:textSize="14sp" />

            <EditText
                android:id="@+id/serverPort_editText"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:textColor="#ff007aff"
                android:text="7901"
                android:hint="Port #"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/loginName_editText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="登陆账号"
                android:singleLine="true"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/loginPsw_editText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"
                android:password="true"
                android:ems="10"
                android:singleLine="true"
                android:hint="登陆密码"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/main_search_button_blue_bg"
                android:text="登陆"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/main_search_button_bg"
                android:text="退出登陆"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的ID："
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/myid_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未登陆"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff00ff"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v2.1.1b151104.1O"
                android:textColor="#aaaaaa"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/dashed_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/id_editText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="对方ID号"
                android:singleLine="true"
                android:numeric="integer"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textSize="14sp" >
            </EditText>

            <EditText
                android:id="@+id/content_editText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="发送内容"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <Button
                android:id="@+id/send_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/main_search_button_green_bg"
                android:text="发送消息"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/dashed_line" />

    <ListView
        android:id="@+id/demo_main_activity_layout_listView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:footerDividersEnabled="true"
        android:listSelector="@android:color/transparent" >
    </ListView>

</LinearLayout>